
@{
    ViewBag.Title = "Index";
}

<h1>--Secured Page--</h1>
<h2>Claims</h2>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <dl>
            @foreach (var claim in System.Security.Claims.ClaimsPrincipal.Current.Claims)
            {
                <dt>@claim.Type</dt>
                <dd>@claim.Value</dd>
            }
        </dl>
    </p>
}
else
{
    <p>The [Authorization] tag and middleware shouldn't have let you reach this point.</p>
}
